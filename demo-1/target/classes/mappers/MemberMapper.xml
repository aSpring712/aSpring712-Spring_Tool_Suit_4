<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 이름 MemberMapper.java를 찾아감 -->
<mapper namespace="com.example.demo1.mapper.MemberMapper">

<resultMap id="memberMap" type="MemberDTO"> <!-- alias로 잡아놓아서 MemberDTO까지만 적어주면 됨 -->
	<id property="userid" column="userid"/>
	<result property="userid" column="userid"/>
	<result property="userpw" column="userpw"/>
	<result property="username" column="username"/>
	<result property="regDate" column="regdate"/>
	<result property="updateDate" column="updatedate"/>
	<collection property="authList" resultMap="authMap"/>
</resultMap>

<!-- collection 이라는 것을 통해 1 : N 관계를 잡음 -->

<resultMap id="authMap" type="AuthDTO" >
	<result property="userid" column="userid"/>
	<result property="auth" column="auth"/>
</resultMap>

<select id="read" resultMap="memberMap">
select
mem.userid, userpw, username, regdate, updatedate, auth
from tbl_member mem left outer join tbl_member_auth auth
on 
mem.userid = auth.userid
where mem.userid = #{userid}
</select>

</mapper>