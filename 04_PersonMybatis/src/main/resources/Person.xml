<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.mycomm.Person"> <!-- resources 영역 : root -->
 
 <sql id="search"> <!-- 검색 시 전체보기와 개수가 달라지는데 중복되는 부분을 따로 뺌 -->
 	<where> <!-- 동적 sql : 검색 할 때만 where절 이후 필요, 검색 아닐 땐 where절 이후는 없어야 함 -->
 		<if test="word != null and field == 'name'">
 			name like CONCAT('%', #{word}, '%') <!-- MySQL이라서 이렇게 적어줘야 함 -->
 		</if>
 		<if test="word != null and field == 'job'">
 			job like CONCAT('%', #{word}, '%')
 		</if>
 	</where> 
 </sql>
 
 <!-- 추가 -->
 <insert id="insertPerson" parameterType="com.mycomm.vo.PersonVO">
 	insert into person values(#{id}, #{name}, #{password}, #{gender}, #{job})
 </insert>
 
 <!-- 전체보기 -->
 <select id="allPerson" resultType="com.mycomm.vo.PersonVO">
 	select * from person
 </select>
 
 <!-- 전체보기(검색 포함) : 받아올 값 있어서 parameterType 필요, 결과값 return을 하기 위해 resultType 필요-->
 <select id="listPerson" parameterType="java.util.Map" resultType="com.mycomm.vo.PersonVO">
 	select * from person <!-- where #{field} like '%#{word}%' -->  
	<include refid="search"></include> 	<!-- 중복되는 내용 처리 -->
 </select>
 
 <!-- 전체 개수 -->
 <select id="allCount" resultType="int">
 	select count(*) from person
 </select>
 
 <!-- 전체 개수(검색 포함) -->
 <select id="countPerson" parameterType="java.util.Map" resultType="int">
  	select count(*) from person
  	<include refid="search"></include> <!-- 중복되는 내용 처리 -->
 </select>
 
 <!-- 상세보기 -->
 <select id="viewPerson" resultType="com.mycomm.vo.PersonVO" parameterType="String">
 	select * from person where id = #{id}
 </select>
 
 <!-- 삭제 -->
 <delete id="deletePerson" parameterType="String">
 delete from person where id = #{id}
 </delete>
 
 <!-- 수정 -->
 <update id="updatePerson" parameterType="com.mycomm.vo.PersonVO">
 update person set name = #{name}, password = #{password}, job = #{job}
 where id = #{id}
 </update>
 
 
 </mapper>